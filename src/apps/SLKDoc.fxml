		</Tab>
		<Tab text="Espionage" closable="false">
			<content>
				<TabPane xmlns:fx="http://javafx.com/fxml/1">
					<tabs>
						<Tab text="ROT13" closable="false">
							<AnchorPane>
								<children>
									<Label layoutX="100" layoutY="20" 
									text="ROT13 is a substitution cipher where char values are modified by 13" />
									<TextField fx:id="RMessage" prefWidth="300" layoutX="150"
										layoutY="50" promptText="Message" />
									<Button layoutX="195" layoutY="100" text="Encrypt"
										onAction="#encryptR" />
									<Button layoutX="330" layoutY="100" text="Decrypt"
										onAction="#decryptR" />
									<TextField prefWidth="300" fx:id="ROutput" layoutX="150"
										layoutY="150" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab text="Beaufort" closable="false">
							<AnchorPane>
								<children>
									<Label layoutX="150" layoutY="20" 
									text="Beaufort uses a key of any length to encrypt" />
									<TextField fx:id="BMessage" prefWidth="300" layoutX="150"
										layoutY="50" promptText="Message" />
									<TextField fx:id="BKey" prefWidth="300" layoutX="150"
										layoutY="80" promptText="Key" />
									<Button layoutX="195" layoutY="120" text="Encrypt"
										onAction="#encryptB" />
									<Button layoutX="330" layoutY="120" text="Decrypt"
										onAction="#decryptB" />
									<TextField prefWidth="300" fx:id="BOutput" layoutX="150"
										layoutY="170" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
