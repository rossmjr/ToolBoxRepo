												<String fx:value="Feet (ft)" />
												<String fx:value="Inch (in)" />
											</FXCollections>
										</items>
									</ComboBox>
									<TextField fx:id="CLOutput" layoutX="790" layoutY="500"
										text="Output" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab styleClass="tab" text="Convert Temperature" closable="false">
							<AnchorPane styleClass="Pane">
								<children>
								<Label styleClass="instruction" layoutX="540" layoutY="200" text="Converts between Fahrenheit, Celsius, and Kelvin"></Label>
									<ComboBox fx:id="CTInBox" prefWidth="110" layoutX="550"
										layoutY="400" promptText="Input Unit">
										<items>
											<FXCollections fx:factory="observableArrayList">
												<String fx:value="Fahrenheit (F)" />
												<String fx:value="Celsius (C)" />
												<String fx:value="Kelvin (K)" />
