				</TabPane>
			</content>
		</Tab>
		<Tab styleClass="tab" text="Espionage" closable="false">
			<content>
				<TabPane styleClass="Pane" xmlns:fx="http://javafx.com/fxml/1">
					<tabs>
						<Tab styleClass="tab" text="ROT13" closable="false">
							<AnchorPane styleClass="Pane">
								<Label styleClass="instruction" layoutX="520" layoutY="200" text="Encrypts the input message using the ROT13 Algorithm"></Label>
								<children>
									<TextField fx:id="RMessage" prefWidth="300" layoutX="760"
										layoutY="400" promptText="Message" />
									<Button styleClass="button" layoutX="780" layoutY="450" text="Encrypt"
										onAction="#encryptR" />
									<Button styleClass="button" layoutX="940" layoutY="450" text="Decrypt"
										onAction="#decryptR" />
									<TextField prefWidth="300" fx:id="ROutput" layoutX="760"
										layoutY="500" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab styleClass="tab" text="Beaufort" closable="false">
							<AnchorPane styleClass="Pane">
								<children>
								<Label styleClass="instruction" layoutX="520" layoutY="200" text="Encrypts the input with the input key using the Beaufort Cipher, Key can be any length"></Label>
									<TextField fx:id="BMessage" prefWidth="300" layoutX="760"
										layoutY="350" promptText="Message" />
									<TextField fx:id="BKey" prefWidth="300" layoutX="760"
										layoutY="400" promptText="Key" />
									<Button styleClass="button" layoutX="780" layoutY="450" text="Encrypt"
										onAction="#encryptB" />
									<Button styleClass="button" layoutX="940" layoutY="450" text="Decrypt"
										onAction="#decryptB" />
									<TextField prefWidth="300" fx:id="BOutput" layoutX="760"
										layoutY="500" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab styleClass="tab" text="Sub347" closable="false">
							<AnchorPane styleClass="Pane">
								<children>
								<Label styleClass="instruction" layoutX="520" layoutY="200" text="Encrypts the input message using a substitution Cipher, replacing each character with the character 3 before it,"></Label>
								<Label styleClass="instruction" layoutX="520" layoutY="230" text="4 after it, and 7 after it"></Label>
									<TextField fx:id="SMessage" prefWidth="300" layoutX="760"
										layoutY="400" promptText="Message" />
									<Button styleClass="button" layoutX="780" layoutY="450" text="Encrypt"
										onAction="#encryptS" />
									<Button styleClass="button" layoutX="940" layoutY="450" text="Decrypt"
										onAction="#decryptS" />
									<TextField prefWidth="300" fx:id="SOutput" layoutX="760"
										layoutY="500" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab styleClass="tab" text="RunningKeyVigenere" closable="false">
							<AnchorPane styleClass="Pane">
								<children>
									<Label styleClass="instruction" layoutX="520" layoutY="200" text="Encrypts the input message with the given key using the Vigenere Cipher, Key must be the exact"></Label>
									 <Label styleClass="instruction" layoutX="520" layoutY="225" text="same quantity of characters as the message. (example: 'HelloWorld' with the key 'BaconLover')"></Label>
									<TextField fx:id="RKVMessage" prefWidth="300"
										layoutX="760" layoutY="350" promptText="Message" />
									<TextField fx:id="RKVKey" prefWidth="300" layoutX="760"
										layoutY="400" promptText="Key" />
									<Button styleClass="button" layoutX="780" layoutY="450" text="Encrypt"
										onAction="#encryptRKV" />
									<Button styleClass="button" layoutX="940" layoutY="450" text="Decrypt"
										onAction="#decryptRKV" />
									<TextField prefWidth="300" fx:id="RKVOutput" layoutX="760"
										layoutY="500" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab styleClass="tab" text="XOR" closable="false">
							<AnchorPane styleClass="Pane">
								<children>
								<Label styleClass="instruction" layoutX="520" layoutY="200" text="Encrypts the input message using Exclusive Or, key must be exactly one character"></Label>
									<TextField fx:id="XMessage" prefWidth="300" layoutX="760"
										layoutY="350" promptText="Message" />
									<TextField fx:id="XKey" prefWidth="300" layoutX="760"
										layoutY="400" promptText="Key" />
									<Button styleClass="button" layoutX="780" layoutY="450" text="Encrypt"
										onAction="#encryptX" />
									<Button styleClass="button" layoutX="940" layoutY="450" text="Decrypt"
										onAction="#decryptX" />
									<TextField prefWidth="300" fx:id="XOutput" layoutX="760"
										layoutY="500" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab styleClass="tab" text="Grid" closable="false">
							<AnchorPane styleClass="Pane">
								<children>
								<Label styleClass="instruction" layoutX="520" layoutY="200" text="Encrypts the input message using the Box Cipher"></Label>
									<TextField fx:id="GMessage" prefWidth="300" layoutX="760"
										layoutY="400" promptText="Message" />
									<Button styleClass="button" layoutX="780" layoutY="450" text="Encrypt"
										onAction="#encryptG" />
									<Button styleClass="button" layoutX="940" layoutY="450" text="Decrypt"
										onAction="#decryptG" />
									<TextField  prefWidth="300" fx:id="GOutput" layoutX="760"
										layoutY="500" text="Result" editable="false" />
