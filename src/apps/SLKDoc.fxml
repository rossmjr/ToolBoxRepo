							<AnchorPane>
								<children>
									<Label layoutX="100" layoutY="20" 
									text="Sub347 is similar to ROT13, but uses a sightly different algorithm" />
									<TextField fx:id="SMessage" prefWidth="300" layoutX="150"
										layoutY="50" promptText="Message" />
									<Button layoutX="195" layoutY="100" text="Encrypt"
										onAction="#encryptS" />
									<Button layoutX="330" layoutY="100" text="Decrypt"
										onAction="#decryptS" />
									<TextField prefWidth="300" fx:id="SOutput" layoutX="150"
										layoutY="150" text="Result" editable="false" />
								</children>
							</AnchorPane>
						</Tab>
						<Tab text="RunningKeyVigenere" closable="false">
							<AnchorPane>
								<children>
									<Label layoutX="100" layoutY="20" 
									text="Running Key Vigenere uses a key of the same length as its message" />
									<TextField fx:id="RKVMessage" prefWidth="300"
										layoutX="150" layoutY="50" promptText="Message" />
									<TextField fx:id="RKVKey" prefWidth="300" layoutX="150"
										layoutY="80" promptText="Key" />
									<Button layoutX="195" layoutY="120" text="Encrypt"
										onAction="#encryptRKV" />
									<Button layoutX="330" layoutY="120" text="Decrypt"
										onAction="#decryptRKV" />
									<TextField prefWidth="300" fx:id="RKVOutput" layoutX="150"
