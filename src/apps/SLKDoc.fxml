										promptText="Input" />
									<Button styleClass="button" layoutX="800" layoutY="450" text="Convert"
										onAction="#CV" />
									<ComboBox fx:id="CVOutBox" prefWidth="110" layoutX="550"
										layoutY="500" promptText="Output Unit">
										<items>
											<FXCollections fx:factory="observableArrayList">
												<String fx:value="Liter (L)" />
												<String fx:value="Milliliter (ml)" />
